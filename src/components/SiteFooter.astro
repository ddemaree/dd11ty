---
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faHeart } from "@fortawesome/sharp-solid-svg-icons";
import type { ClassValue } from "clsx";

export interface Props {
  class?: ClassValue;
}

const { class: className } = Astro.props;

---
<footer class:list={["@container font-[loretta-variable]", className]}>
  <div class="flex flex-col gap-2 items-center justify-end text-sm">
    <!-- <hr class=" border-black/20 border-t w-1/3 mb-8"> -->
    <p class="text-lg/none font-medium [font-variation-settings:'wght'_520]">&copy; {new Date().getFullYear()} David Demaree</p>
    <div class="text-center flex gap-2 italic">
      <p class="m-0">
        Made with{" "}
        <FontAwesomeIcon icon={faHeart} className="text-red-500" />{" "}
        in New Jersey, U.S.A.
      </p>
      <span>&bullet;</span>
      <p class="text-ink-medium m-0">
        &ldquo;Have courage, and be kind.&rdquo;
      </p>
    </div>
  </div>
</footer>