---
import { faDDLogo } from "@lib/icons";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { SiteMenu } from "./SiteMenu";

// Loading the mobile screen from Tailwind here so that we don't
// accidentally load all of Tailwind into client JS.
import defaultTheme from "tailwindcss/defaultTheme";
const mobileScreen = defaultTheme.screens.sm;

const { pathname } = Astro.url
---
<header
  id="nav-parent"
  class="site-header grid h-20 grid-cols-[auto,1fr,auto] items-center gap-8 px-inset"
>
  <div>
    <a href="/">
      <FontAwesomeIcon icon={faDDLogo} size="2x" />
      <span class="sr-only">David Demaree</span>
    </a>
  </div>

  <div class="flex items-center justify-start gap-3">
    <SiteMenu mobileBreakpoint={mobileScreen} client:load />
  </div>
  <div class="flex gap-[0.5em]">
    <div>TW</div>
    <div>MD</div>
    <div>FD</div>
    <div>DM</div>
  </div>
</header>

<style>
  .site-header {
    border-bottom: 1px solid var(--dd-col-divider, #444);
    box-shadow: 0 1px 0.5em #222;
  }
</style>