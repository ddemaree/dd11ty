---
import BaseHead from '../components/BaseHead.astro';
import ReactIcon from '../components/FontAwesomeIcon.jsx'\
import { Markdown } from 'astro/components'

let title = 'Example Blog';
let description = 'The perfect starter for your perfect blog.';
let permalink = 'https://example.com/';
---
<html lang="en" class="bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-100">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
  </head>
  <body>
    <div class="py-12 w-full-inset mx-auto max-w-3xl">
      <h1 class="text-4xl font-sans font-semibold">
        <ReactIcon icon="coffee" />
        A home page</h1>
      <Markdown>
        # This is a home page too <ReactIcon icon="coffee" />
      </Markdown>
    </div>
  </body>
</html>