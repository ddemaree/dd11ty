---
import SiteLayout from "@components/SiteLayout.astro";
import BioText from "../inc/shortBio.mdx";
import MyLinks from "@components/MyLinks.astro";
---
<SiteLayout title="David's web site" footerOptions={{showBio: false, showLinks: false}} bodyClass="page-home">
  <div class="home-wrap">
    <div class="home">
      <div class="home-content">
        <BioText />
        <MyLinks />
      </div>
    </div>
  </div>
</SiteLayout>

<style is:global>
.page-home {

}

.page-home .site-layout-main {
  display: flex;
  align-items: center;
}

.page-home .site-layout-main {
  --weird-image-inset: clamp(-2rem, calc(10vw - 2rem), 8rem);
  --weird-image-opacity: 0.3;
}

.page-home .site-layout-main:before {
  background-image:
    radial-gradient(ellipse at center, #fff9, #fff0, #fff9),
    linear-gradient(90deg, pink, yellow);
  background-size: 100%;
  background-blend-mode: screen, normal;
  position: fixed;
  inset: var(--weird-image-inset);
  content: "";
  display: block;
  z-index: -1;
}

.page-home .site-layout-main:after {
  background-image: url(/dd-pattern-trans.png);
  opacity: var(--weird-image-opacity);
  mix-blend-mode: luminosity;
  position: fixed;
  inset: var(--weird-image-inset);
  content: "";
  display: block; 
  z-index: -1;
}

.home-wrap {
  container-type: inline-size;
  container-name: home;
  /* max-width: var(--width-wide); */
}
.home {
  display: grid;
  grid-auto-flow: row;
  row-gap: max(1.75rem, 4cqw);
  align-items: flex-end;
}

.home > .site-footer-bio-photo {
  width: clamp(220px, 8cqw, 300px);
}

.home-content {
  font-size: clamp(24px, 8cqw, 36px);
  line-height: 1.3;
  font-weight: 600;
  display: contents;
  letter-spacing: -0.02ch;
}

.home-content p:first-of-type {
  font-size: 132%;
  line-height: 1.2;
  /* font-family: var(--font-sans); */
}

.home-content .site-footer-links {
  justify-content: flex-start;
  text-align: left;
  column-gap: max(1rem, 2.5cqw);
  row-gap: max(0.8rem, 1.8cqw);
}

.home-content .site-footer-links li:has(a[href*="mailto"]) {
  font-size: inherit;
}


</style>