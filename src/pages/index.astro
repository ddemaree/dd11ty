---
// Component Imports
import BaseHead from '@components/BaseHead.astro';
import SiteHeader from '@components/SiteHeader.astro';
import BlogPostPreview from '@components/BlogPostPreview.astro';

let title = 'David Demaree';
let description = 'The perfect starter for your perfect blog.';
let permalink = 'https://example.com/';

let allPosts = []
// let allPosts = await Astro.glob('./p/*.md');
// allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf());

let otherAllPosts = await Astro.glob("../posts/*.md");
// console.log(otherAllPosts.map(f => generateSlug(f.file)))
---

<html lang="en">
	<head>
		<BaseHead {title} {description} {permalink} />

		<style>
			header {
				width: 100%;
				height: 100%;
				background-color: var(--theme-bg-offset);
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.content {
				margin-top: 2rem;
				margin-bottom: 8rem;
			}

			.content :global(main > * + *) {
				margin-top: 1rem;
			}

			.intro {
				padding-bottom: 2rem;
				border-bottom: 4px solid var(--theme-divider);
				margin-bottom: 2rem;

				grid-template-columns: 180px 1fr;
				display: grid;
				gap: 1rem;
				align-items: center;
			}

			.intro > * {
				margin: 0;
			}

			.latest {
				font-size: 2.5rem;
				font-weight: 700;
			}
		</style>
	</head>

	<body>
		<SiteHeader />
		<div class="wrapper">
			<main class="content">
				
				<section class="intro">
					<img src="/assets/dd-stitch-transparent.png" width="320" height="453" alt="Man wearing Stitch cap" class="mb-2" />
					<div>
						<h1 class="latest">{title}</h1>
						<p>{description}</p>
					</div>
				</section>

				<section aria-label="Blog post list">
					{allPosts.map((p) => <BlogPostPreview post={p} />)}
				</section>
			</main>
		</div>
	</body>
</html>
