---
// Component Imports
import { Image } from '@astrojs/image/components';
import BaseHead from '@components/BaseHead.astro';
import SiteHeader from '@components/SiteHeader.astro';
import BlogPostPreview from '@components/BlogPostPreview.astro';
import Footer from '@components/Footer.astro';
import Intro from '@components/home/Intro.astro';

import { getAllPosts } from '@lib/posts';

let title = "David Demaree's blog";
let description = 'The perfect starter for your perfect blog.';
let permalink = 'https://example.com/';

let allPosts = []

allPosts = await getAllPosts();
---

<html lang="en">
	<head>
		<BaseHead {title} {description} {permalink} />
		<style is:global>
			.intro {
				> * + * {
					@apply mt-4;
				}

				h1, h2, h3 {
					@apply font-semibold;
					font-size: revert;
				}
			}
		</style>
	</head>

	<body>
		<SiteHeader />
		<div class="wrapper">
			<main class="content w-inset max-w-6xl [margin-inline:auto] grid grid-cols-1 gap-x-[max(2rem,4vw)] justify-items-center lg:grid-cols-[min(35vw,410px)_1fr]">
				<Intro />

				<section class="blog-posts w-full max-w-4xl space-y-6" aria-label="Blog post list">
					<header>
						<h2 class="text-lg font-medium tracking-widest uppercase">Blog posts</h2>
					</header>

					{allPosts.map((p) => <BlogPostPreview post={p} />)}
				</section>
			</main>
		</div>
		<Footer />
	</body>
</html>
