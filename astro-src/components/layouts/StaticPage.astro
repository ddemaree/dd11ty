---
import type { MarkdownLayoutProps } from 'astro';
import type { FooterOptions } from '@components/SiteFooter.astro';
import SiteLayout from '@components/SiteLayout.astro';
import Prose from '@components/Prose.astro';

const { title, footerOptions } = Astro.props.frontmatter || Astro.props;

type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  date: string;
  footerOptions?: FooterOptions;
}>;


---
<SiteLayout title={title} {footerOptions}>
  <Prose class="md-page-content">
    <slot />
  </Prose>
</SiteLayout>

<style>

  .md-page-content :global(h1:first-of-type) {
    font-size: clamp(44px, 8vw, 80px);
    margin-bottom: 0.35em;
  }

</style>