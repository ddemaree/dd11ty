---
import BioText from '../inc/shortBio.mdx';
import BioPhoto from './BioPhoto.astro';
---
<div class="site-footer-bio">
  <BioPhoto />
  
  <div class="site-footer-bio-content">
    <BioText />
  </div>
</div>
<style is:global>
  :where(.site-footer-bio > *) {
    width: 100%;
  }

  .site-footer-bio {
    container-type: inline-size;
    container-name: footer-bio;
    display: contents;
    width: 100%;
  }

  .site-footer-bio-content {
    --sfc-font-multiple: 1;
    font-family: var(--font-serif);
    line-height: 1.5;
    display: flex;
    flex-direction: column;
    row-gap: 0.75rem;
  }

  .site-footer-bio-content b {
    font-weight: 700;
  }

  .site-footer-bio-content p {
    line-height: 1.45;
    font-size: clamp(16px, 5vw, 17px);
    max-width: 44ch;
  }

  .site-footer-bio-content p:first-of-type {
    --sfc-font-multiple: 1.4;
    font-family: var(--font-sans);
    font-weight: 500;
    line-height: 1.15;
  }

  @supports (container-type: inline-size) {
    .site-footer-bio-content {
      container-type: inline-size;
      container-name: footer-bio-content;
    }

    .site-footer-bio-content p {
      font-size: calc(clamp(16px, 4cqw, 18px) * var(--sfc-font-multiple));
    }

    @container footer (min-width: 560px) {
      .site-footer-bio {
        column-gap: 1.5rem;
        display: grid;
        grid-template-columns: auto 1fr;
        text-align: left;
      }

      .site-footer-bio-content p {
        display: block;
      }
    }

    @container home (min-width: 400px) {
      .site-footer-bio {
        background-color: pink;
        display: block;
      }
    }
  }


</style>