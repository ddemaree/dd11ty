---
import { cloudinaryImage, getCloudinaryThumbnailUrl } from '../lib/cloudinary';
import Date from './Date.astro';

export interface Props {
	post: any;
}

const { post } = Astro.props;

let postImageURL;
const postImage = post.frontmatter.image;
if(postImage && postImage.cloudinary) {
	postImageURL = getCloudinaryThumbnailUrl(postImage.cloudinary)
}
---

<article class="post-preview">
	{postImageURL && <figure><img src={postImageURL} width="300" height="200" alt="Image for post" /></figure>}
	<header>
		<p class="publish-date"><Date date={post.frontmatter.pubDate} /></p>
		<a href={post.url}><h1 class="title">{post.frontmatter.title}</h1></a>
	</header>
	<p>{post.frontmatter.description}</p>
</article>

<style>

	.post-preview {
		padding-bottom: 2rem;
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	header {
		align-items: flex-start;
		display: flex;
		flex-direction: column;
		justify-content: center;
		text-align: left;

		h1 {
			font-weight: 600;
		}
	}

	.title,
	.author,
	.publish-date {
		margin: 0;
	}

	.publish-date,
	.author {
		font-size: 1.25rem;
		color: var(--theme-text-lighter);
	}

	.title {
		font-size: 2.25rem;
		font-weight: 700;
		color: var(--theme-text);
	}
</style>
